<div class="container">
  <div class="row">
    <div class="span6 offset3">
      <div class="well">

        <%= render_header '登入' %>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-signin') do |f| %>
          <%= f.label :email, '邮箱:' %>
          <%= f.email_field :email, :class => 'span5', :placeholder => "example@example.com" %>
          <%= f.label :password, '密码：' %>
          <%= f.password_field :password, :class => 'span5' %>

          <% if devise_mapping.rememberable? -%>
            <%= f.label :remember_me, :class => 'checkbox' do %>
              <%= f.check_box :remember_me %>
              记住我
            <% end -%>
          <% end -%>

          <%= f.submit '登入', :class => 'btn btn-primary' %>
        <% end -%>
        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
