<div class="container">
	<div class="row">
		<div class="span6 offset3">
			<div class="well">
				<%= render_header '注册' %>

				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>

				<%= f.label :email,'邮箱：' %>
				<%= f.email_field :email,:class=>'span5',:placeholder=> "example@example.com" %>

				<%= f.label :password,'密码：' %>
				<%= f.password_field :password,:class=> 'span5' %>

				<%= f.label :password_confirmation,'确认密码：' %>
				<%= f.password_field :password_confirmation,:class=>'span5' %>

				<%= f.submit '注册',:class => 'btn btn-primary' %>
					<% end %>

					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
